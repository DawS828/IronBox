  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f5f7fa; padding: 30px; }
    .main-container { display: flex; flex-wrap: wrap; gap: 30px; justify-content: center; margin-top: 20px; }
    .form-container, .rfid-container { background-color: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
    .form-container { max-width: 600px; width: 100%; }
    .rfid-container { width: 300px; }
    .logout-btn { position: absolute; top: 20px; right: 30px; }
  </style>
</head>
<body>

<a href="logout.php" class="btn btn-outline-danger logout-btn">D√©connexion</a>

<div class="main-container">
  <!-- RFID -->
  <div class="rfid-container">
    <h5 class="text-center mb-3">Lecteur RFID</h5>
    <div id="badge-info" class="alert alert-secondary text-center">En attente de scan...</div>
  </div>

  <!-- Ajout Stock -->
  <div class="form-container">
    <h4 class="mb-4">Ajout de Stock</h4>
    <form method="POST">
      <div class="mb-3">
        <label for="casierID" class="form-label">Casier</label>
        <select name="casierID" id="casierID" class="form-select" required>
          <?php foreach ($casiers as $casier): ?>
            <option value="<?= $casier['CasierID'] ?>">#<?= $casier['CasierID'] ?> - <?= $casier['CasierType'] ?></option>
          <?php endforeach; ?>
        </select>
      </div>
      <div class="mb-3">
        <label for="quantite" class="form-label">Quantit√©</label>
        <input type="number" name="quantite" class="form-control" required>
      </div>
      <button type="submit" name="ajouter_stock" class="btn btn-success w-100">Ajouter</button>
    </form>
  </div>

  <!-- Ajout Technicien -->
  <div class="form-container">
    <h4 class="mb-4">Ajout de Technicien</h4>
    <form method="POST">
      <div class="mb-3"><input name="tech_nom" class="form-control" placeholder="Nom" required></div>
      <div class="mb-3"><input name="tech_prenom" class="form-control" placeholder="Pr√©nom" required></div>
      <div class="mb-3">
        <select name="tech_role" class="form-select" required>
          <option value="Admin">Admin</option>
          <option value="Technicien">Technicien</option>
        </select>
      </div>
      <div class="mb-3"><input name="tech_badge" class="form-control" placeholder="Badge ID" required></div>
      <div class="mb-3"><input type="password" name="tech_password" class="form-control" placeholder="Mot de passe" required></div>
      <button type="submit" name="ajouter_technicien" class="btn btn-primary w-100">Ajouter le technicien</button>
    </form>
  </div>

  <!-- Gestion acc√®s casiers -->
  <div class="form-container">
    <h4 class="mb-4">Acc√®s Casier - Technicien</h4>
    <form method="POST">
      <div class="mb-3">
        <label class="form-label">Technicien</label>
        <select name="access_tech_id" class="form-select" required>
          <?php foreach ($techs as $tech): ?>
            <option value="<?= $tech['TechnicienID'] ?>"><?= $tech['TechPrenom'] . ' ' . $tech['TechNom'] ?></option>
          <?php endforeach; ?>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Casiers autoris√©s</label>
        <?php foreach ($casiers as $casier): ?>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="access_casiers[]" value="<?= $casier['CasierID'] ?>" id="casier<?= $casier['CasierID'] ?>">
            <label class="form-check-label" for="casier<?= $casier['CasierID'] ?>">
              #<?= $casier['CasierID'] ?> - <?= $casier['CasierType'] ?>
            </label>
          </div>
        <?php endforeach; ?>
      </div>

      <button type="submit" name="set_acces" class="btn btn-warning w-100">Mettre √† jour les acc√®s</button>
    </form>
  </div>
</div>

<!-- Bouton pour ouvrir tous les casiers -->
<div class="container mt-5 text-center">
  <form method="POST">
    <button type="submit" name="ouvrir_tous" class="btn btn-danger btn-lg" onclick="return confirm('Confirmer l\'ouverture de tous les casiers ?');">
      üîì Ouvrir Tous les Casiers
    </button>
  </form>
</div>

<!-- Historique -->
<div class="container mt-5">
  <h4 class="text-center mb-4">Historique en Temps R√©el</h4>
  <table class="table table-bordered table-hover bg-white shadow-sm">
    <thead class="table-dark">
      <tr>
