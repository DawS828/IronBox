<!-- Liste des acc√®s -->
<div class="container mt-5">
  <h4 class="text-center mb-4">Acc√®s des Techniciens aux Casiers</h4>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Technicien</th>
        <th>Casiers autoris√©s</th>
      </tr>
    </thead>
    <tbody>
      <?php
      foreach ($techs as $tech) {
          $access = $bdd->prepare("SELECT C.CasierType FROM Acceder A JOIN Casier C ON A.CasierID = C.CasierID WHERE A.TechnicienID = ?");
          $access->execute([$tech['TechnicienID']]);
          $casiers_autorises = $access->fetchAll(PDO::FETCH_COLUMN);

          echo "<tr><td>{$tech['TechPrenom']} {$tech['TechNom']}</td>";
          echo "<td>" . (empty($casiers_autorises) ? "<i>Aucun acc√®s</i>" : implode(', ', $casiers_autorises)) . "</td></tr>";
      }
      ?>
    </tbody>
  </table>
</div>

<script>
  setInterval(() => {
    fetch('badge.json')
      .then(res => res.json())
      .then(data => {
        const badge = data.badge || "Aucun";
        document.getElementById('badge-info').textContent = "Badge scann√© : " + badge;
      })
      .catch(() => {
        document.getElementById('badge-info').textContent = "Erreur de lecture.";
      });
  }, 1000);

  async function fetchHistorique() {
    try {
      const res = await fetch('fetch_historique.php');
      const data = await res.json();
      const tbody = document.getElementById('historique-body');
      tbody.innerHTML = '';

      data.forEach(item => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${item.HistoriqueDate}</td>
          <td>${item.HistoriqueHeure}</td>
          <td>${item.HistoriqueTypeEvent}</td>
          <td>${item.badge ?? '-'}</td>
          <td>${item.TechPrenom ? item.TechPrenom + ' ' + item.TechNom : '-'}</td>
        `;
        tbody.appendChild(row);
      });
    } catch (err) {
      console.error("Erreur de chargement :", err);
    }
  }

  setInterval(fetchHistorique, 5000);
  fetchHistorique();
</script>

</body>
